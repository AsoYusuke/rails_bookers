<!DOCTYPE html>
  <html>
    <head>
      <title>Bookers</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <% if flash[:notice] %>
      <div class="m-4">
        <p class="text-success" id="notice"><%= flash[:notice] %></p>
      </div>
      <% end %>
      <%= yield %>
    </body>
  </html>
