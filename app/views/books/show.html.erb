<div class="my-4">
  <div class="ml-5">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <p>
     <strong>Title:</strong>
     <%= @book.title %>
    </p>


    <p>
      <strong>Body:</strong>
      <%= @book.body %>
    </p>
  </div>
</div>

<div class="ml-3">
  <%= link_to 'Edit', edit_book_path(@book), class: "edit_#{@book.id}" %>
  |
  <%= link_to 'Back', books_path, class: "back" %>
</div>