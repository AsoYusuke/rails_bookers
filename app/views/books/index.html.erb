<h2>Books</h1>

<table>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
    </tr>
  </thead>
</table>

<tbody>
  <% @books.each do |book| %>
    <tr>
      <p>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
         <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy", book_path(book), method: :delete %></td>
      </p>
    </tr>
  <% end %>
</tbody>

<h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:<br>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
  <% end %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>